@page "/save-text"

<p>
    <fieldset>
        <legend>Input text</legend>
        <input type="text" @ref="InputElement" @bind="InpuText" />
    </fieldset>
</p>

<div class="hot-keys-cheat-sheet alert alert-secondary mt-4">
    In this page, <span class="key">Ctrl</span>+<span class="key">S</span> will save the input text.
</div>

<fieldset>
    <legend>Saved text</legend>
    @foreach (var savedText in this.SavedTexts)
    {
        <div>"@(savedText)"</div>
    }
</fieldset>
